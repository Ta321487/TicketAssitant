<UserControl x:Class="TA_WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TA_WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:TA_WPF.ViewModels"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:converters="clr-namespace:TA_WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1900" d:DesignWidth="1800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <converters:FullScreenWindowStyleConverter x:Key="FullScreenWindowStyleConverter"/>
            <converters:FullScreenWindowStateConverter x:Key="FullScreenWindowStateConverter"/>
            <converters:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter"/>
            <converters:ScreenWidthToFontSizeConverter x:Key="ScreenWidthToFontSizeConverter"/>
            <converters:FontSizeIncreaseConverter x:Key="FontSizeIncreaseConverter"/>
            <converters:ScreenWidthToColumnsConverter x:Key="ScreenWidthToColumnsConverter"/>
            <converters:BooleanToPackIconKindConverter x:Key="BooleanToPackIconKindConverter"/>
            
            <!-- 数据模板 -->
            <DataTemplate x:Key="RecentActivityTemplate">
                <materialDesign:Card Margin="0,4" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Train" 
                                               Width="24" 
                                               Height="24" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,16,0"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding DepartDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                     FontWeight="Medium"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding TrainNo}" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Margin="0,0,8,0"
                                         FontSize="{DynamicResource MaterialDesignFontSize}"/>
                                <TextBlock Text="{Binding DepartStation}" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Margin="0,0,4,0"
                                         FontSize="{DynamicResource MaterialDesignFontSize}"/>
                                <materialDesign:PackIcon Kind="ArrowRight" 
                                                       Width="16" 
                                                       Height="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding ArriveStation}" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding SeatType}" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Margin="0,4,0,0"
                                     Opacity="0.6"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" 
                                 Text="{Binding Money, StringFormat='¥{0:N2}'}" 
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 FontWeight="Medium"
                                 VerticalAlignment="Center"
                                 Margin="16,0,0,0"
                                 FontSize="{DynamicResource MaterialDesignFontSize}"/>
                    </Grid>
                </materialDesign:Card>
            </DataTemplate>
            
            <!-- 路线数据模板 -->
            <DataTemplate x:Key="RouteTemplate">
                <materialDesign:Card Margin="0,4" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Routes" 
                                               Width="24" 
                                               Height="24" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,16,0"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding RouteName}" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                     FontWeight="Medium"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            <TextBlock Text="{Binding Count, StringFormat='乘坐次数: {0}次'}"
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Margin="0,4,0,0"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" 
                                 Text="{Binding TotalExpense, StringFormat='¥{0:N2}'}"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 FontWeight="Medium"
                                 Margin="16,0"
                                 VerticalAlignment="Center"
                                 FontSize="{DynamicResource MaterialDesignFontSize}"/>

                        <materialDesign:PackIcon Grid.Column="3" 
                                               Kind="ChevronRight" 
                                               Width="24" 
                                               Height="24"
                                               VerticalAlignment="Center"
                                               Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainGrid" 
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="MainGrid" Margin="16" Opacity="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题和时间区域 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 标题 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ViewDashboard" Width="36" Height="36" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="系统仪表盘" 
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                           VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 刷新按钮和全屏按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="刷新数据"
                            Command="{Binding RefreshCommand}"
                            Margin="16,0,8,0">
                        <materialDesign:PackIcon Kind="Refresh" Height="24" Width="24">
                            <materialDesign:PackIcon.RenderTransform>
                                <RotateTransform x:Name="RefreshButtonRotation" CenterX="12" CenterY="12"/>
                            </materialDesign:PackIcon.RenderTransform>
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard Name="RotateStoryboard">
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                            From="0" To="360" Duration="0:0:1"
                                                            RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="RotateStoryboard"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="{Binding IsFullScreen, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='退出全屏|全屏'}"
                            Command="{Binding ToggleFullScreenCommand}"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="{Binding IsFullScreen, Converter={StaticResource BooleanToPackIconKindConverter}, ConverterParameter='FullscreenExit|Fullscreen'}" 
                                               Height="24" Width="24"/>
                    </Button>
                </StackPanel>
                
                <!-- 加载提示 -->
                <TextBlock Grid.Column="1"
                         Text="正在刷新数据..."
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         VerticalAlignment="Center"
                         Margin="64,0,0,0"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- 当前时间 -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="CalendarMonth" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding FormattedDate}" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="Clock" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding FormattedTime}" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               HorizontalAlignment="Right"
                               FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- 时间筛选区域 -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Filter" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="时间筛选" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton Content="今日" 
                                   Style="{StaticResource MaterialDesignTabRadioButton}"
                                   Margin="4,0" 
                                   IsChecked="{Binding SelectedTimeRange, ConverterParameter=今日, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                   Command="{Binding TimeRangeCommand}" 
                                   CommandParameter="今日"
                                   FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        <RadioButton Content="本周" 
                                   Style="{StaticResource MaterialDesignTabRadioButton}"
                                   Margin="4,0" 
                                   IsChecked="{Binding SelectedTimeRange, ConverterParameter=本周, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                   Command="{Binding TimeRangeCommand}" 
                                   CommandParameter="本周"
                                   FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        <RadioButton Content="本月" 
                                   Style="{StaticResource MaterialDesignTabRadioButton}"
                                   Margin="4,0" 
                                   IsChecked="{Binding SelectedTimeRange, ConverterParameter=本月, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                   Command="{Binding TimeRangeCommand}" 
                                   CommandParameter="本月"
                                   FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        <RadioButton Content="本年" 
                                   Style="{StaticResource MaterialDesignTabRadioButton}"
                                   Margin="4,0" 
                                   IsChecked="{Binding SelectedTimeRange, ConverterParameter=本年, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                   Command="{Binding TimeRangeCommand}" 
                                   CommandParameter="本年"
                                   FontSize="{DynamicResource MaterialDesignFontSize}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <DatePicker SelectedDate="{Binding StartDate}" Width="120" materialDesign:HintAssist.Hint="开始日期" Language="zh-CN"/>
                        <TextBlock Text="至" VerticalAlignment="Center" Margin="8,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="120" materialDesign:HintAssist.Hint="结束日期" Language="zh-CN"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            
            <!-- 数据概览区域 -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.Resources>
                    <Style x:Key="ResponsiveUniformGrid" TargetType="UniformGrid">
                        <Setter Property="Columns" Value="5"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth, Converter={StaticResource ScreenWidthToColumnsConverter}, ConverterParameter=1600}" Value="True">
                                <Setter Property="Columns" Value="4"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth, Converter={StaticResource ScreenWidthToColumnsConverter}, ConverterParameter=1300}" Value="True">
                                <Setter Property="Columns" Value="3"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth, Converter={StaticResource ScreenWidthToColumnsConverter}, ConverterParameter=1000}" Value="True">
                                <Setter Property="Columns" Value="2"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth, Converter={StaticResource ScreenWidthToColumnsConverter}, ConverterParameter=650}" Value="True">
                                <Setter Property="Columns" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                
                <!-- 数据卡片区域 -->
                <UniformGrid Grid.Row="0" HorizontalAlignment="Stretch" Style="{StaticResource ResponsiveUniformGrid}">
                    <!-- 总车票数卡片 -->
                    <materialDesign:Card Margin="4" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid Height="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="TicketOutline" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="总车票数" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalTickets}" 
                                       Style="{StaticResource MaterialDesignHeadline1TextBlock}" 
                                       FontWeight="Bold"
                                       FontSize="{DynamicResource LargeFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                                <TextBlock Text="张" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                       HorizontalAlignment="Center"
                                       FontSize="{DynamicResource MediumFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 本月车票卡片 -->
                    <materialDesign:Card Margin="4" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid Height="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="CalendarMonth" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentRangeText}" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CurrentRangeTickets}" 
                                       Style="{StaticResource MaterialDesignHeadline1TextBlock}" 
                                       FontWeight="Bold"
                                       FontSize="{DynamicResource LargeFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                                <TextBlock Text="张" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                       HorizontalAlignment="Center"
                                       FontSize="{DynamicResource MediumFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 最经常出发的车站卡片 -->
                    <materialDesign:Card Margin="4" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid Height="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Train" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="最经常出发的车站" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="16,0">
                                <TextBlock Text="{Binding MostFrequentDepartureStation}" 
                                       Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="{DynamicResource MediumLargeFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 最后一次出发的车站卡片 -->
                    <materialDesign:Card Margin="4" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid Height="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="TrainVariant" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="最后一次出发的车站" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="16,0">
                                <TextBlock Text="{Binding LastDepartureStation}" 
                                       Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="{DynamicResource MediumLargeFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 最后一次到达的车站卡片 -->
                    <materialDesign:Card Margin="4" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid Height="180">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="TrainCar" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="最后一次到达的车站" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="16,0">
                                <TextBlock Text="{Binding LastArrivalStation}" 
                                       Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="{DynamicResource MediumLargeFontSize}"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </UniformGrid>
            </Grid>
            
            <!-- 常用线路TOP5和最近活动 -->
            <Grid Grid.Row="3" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 最近活动区域 -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="History" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="最近活动" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1"> 
                            <ListView 
                                  ItemsSource="{Binding RecentActivities}"
                                  ItemTemplate="{StaticResource RecentActivityTemplate}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  MinHeight="200"
                                  MaxHeight="300"
                                  Visibility="{Binding HasRecentActivities, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                        <Setter Property="Margin" Value="0,4"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="{DynamicResource MaterialDesignHeadline5FontSize}"
                                      Visibility="{Binding HasRecentActivities, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- 常用线路TOP5 -->
                <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Routes" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="常用线路TOP5" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1">
                            <ListView ItemsSource="{Binding TopRouteData}" 
                                     ItemTemplate="{StaticResource RouteTemplate}" 
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MinHeight="200"
                                     MaxHeight="300"
                                     Visibility="{Binding HasTopRouteData, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                        <Setter Property="Margin" Value="0,4"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="{DynamicResource MaterialDesignHeadline5FontSize}"
                                      Visibility="{Binding HasTopRouteData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
            
            <!-- 图表分析区域 -->
            <Grid Grid.Row="4" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 车票使用趋势 -->
                <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="350"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="车票使用趋势" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>
                        
                        <lvc:CartesianChart Grid.Row="1" 
                                           Series="{Binding MonthlyTicketSeries}" 
                                           LegendLocation="Top" 
                                           DisableAnimations="False"
                                           Hoverable="True"
                                           DataTooltip="{x:Null}"
                                           Background="Transparent"
                                           Visibility="{Binding ShowMonthlyTicketChart, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="{Binding MonthlyTicketXTitle}" 
                                         Labels="{Binding MonthlyTicketLabels}"
                                         Foreground="{DynamicResource MaterialDesignBody}"
                                         FontSize="{DynamicResource MaterialDesignFontSize}"
                                         Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                                         LabelsRotation="0"
                                         Margin="10"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="车票数量" 
                                         MinValue="0"
                                         LabelFormatter="{Binding MonthlyTicketYFormatter}"
                                         Foreground="{DynamicResource MaterialDesignBody}"
                                         FontSize="{DynamicResource MaterialDesignFontSize}"
                                         Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                                         Margin="10"/>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.ChartLegend>
                                <lvc:DefaultLegend Background="Transparent"
                                                 Foreground="{DynamicResource MaterialDesignBody}"
                                                 FontSize="{DynamicResource MaterialDesignFontSize}"
                                                 BulletSize="15"/>
                            </lvc:CartesianChart.ChartLegend>
                        </lvc:CartesianChart>
                        
                        <!-- 提示信息 -->
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MonthlyTicketChartMessage}" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Margin="20"
                                  FontSize="{DynamicResource MaterialDesignHeadline6FontSize}"
                                  Visibility="{Binding ShowMonthlyTicketChart, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 路线相关区域 -->
                <materialDesign:Card Grid.Row="0" Grid.Column="1" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="350"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Routes" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="路线相关" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" 
                                 Text="维护中" 
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="{DynamicResource MaterialDesignHeadline5FontSize}"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 车票类型分布 -->
                <materialDesign:Card Grid.Row="1" Grid.Column="0" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="350"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="ChartPie" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="车票类型分布" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Grid.Row="1">
                            <lvc:PieChart Series="{Binding TicketTypeSeries}" 
                                         LegendLocation="Right" 
                                         InnerRadius="0" 
                                         Hoverable="True" 
                                         DataClick="PieChart_DataClick"
                                         DisableAnimations="False"
                                         Background="Transparent"
                                         FontSize="{DynamicResource MaterialDesignFontSize}">
                                <lvc:PieChart.DataTooltip>
                                    <lvc:DefaultTooltip SelectionMode="OnlySender"
                                                      Background="{DynamicResource MaterialDesignPaper}"
                                                      Foreground="{DynamicResource MaterialDesignBody}"
                                                      ShowTitle="False"
                                                      ShowSeries="False"
                                                      BorderThickness="1"
                                                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                      Padding="8"
                                                      FontSize="{DynamicResource MaterialDesignFontSize}"
                                                      CornerRadius="4"/>
                                </lvc:PieChart.DataTooltip>
                                <lvc:PieChart.ChartLegend>
                                    <lvc:DefaultLegend Background="Transparent"
                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                     FontSize="{DynamicResource MaterialDesignFontSize}"
                                                     BulletSize="15"
                                                     Margin="0,10,0,0"/>
                                </lvc:PieChart.ChartLegend>
                            </lvc:PieChart>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="{DynamicResource MaterialDesignHeadline5FontSize}"
                                      Visibility="{Binding HasTicketTypeData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 费用支出分析 -->
                <materialDesign:Card Grid.Row="1" Grid.Column="1" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MinHeight="350"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 标题区域 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="CurrencyCny" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="费用支出分析" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" FontSize="{DynamicResource MaterialDesignFontSize}"/>
                        </StackPanel>
                        
                        <!-- 预算调整区域 -->
                        <Grid Grid.Row="1" Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="月度预算: " 
                                      VerticalAlignment="Center" 
                                      Style="{StaticResource MaterialDesignBody1TextBlock}"
                                      FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            
                            <Slider Grid.Column="1"
                                    x:Name="BudgetSlider"
                                    Minimum="0"
                                    Maximum="10000"
                                    Value="{Binding BudgetAmount, Mode=TwoWay}"
                                    Style="{StaticResource MaterialDesignSlider}"
                                    TickFrequency="500"
                                    Margin="16,0"/>
                            
                            <TextBox Grid.Column="2"
                                     x:Name="BudgetTextBox"
                                     Text="{Binding BudgetAmount, StringFormat='{}{0:N0}', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=0, TargetNullValue=0}"
                                     Width="180"
                                     Height="60"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:TextFieldAssist.PrefixText="¥"
                                     materialDesign:HintAssist.Hint="输入0-10000"
                                     materialDesign:HintAssist.HelperText="预算范围：0-10000"
                                     materialDesign:HintAssist.HelperTextFontSize="{DynamicResource MaterialDesignCaptionFontSize}"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     PreviewTextInput="NumberValidationTextBox"
                                     PreviewKeyDown="BudgetTextBox_PreviewKeyDown"
                                     TextChanged="BudgetTextBox_TextChanged"
                                     LostFocus="BudgetTextBox_LostFocus"/>
                        </Grid>
                        
                        <!-- 分析指标选择区域 -->
                        <Grid Grid.Row="2" Margin="0,0,0,16" Visibility="{Binding ShowExpenseChart, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                     Text="分析指标: " 
                                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                                     FontSize="{DynamicResource MaterialDesignFontSize}"
                                     Margin="0,0,0,8"/>
                            
                            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <RadioButton Content="支出金额" 
                                           Style="{StaticResource MaterialDesignRadioButton}"
                                           Margin="8,4" 
                                           IsChecked="{Binding SelectedTrendIndicator, ConverterParameter=支出金额, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                           Command="{Binding SelectTrendIndicatorCommand}" 
                                           CommandParameter="支出金额"
                                           FontSize="{DynamicResource MaterialDesignFontSize}"/>
                                <RadioButton Content="平均票价" 
                                           Style="{StaticResource MaterialDesignRadioButton}"
                                           Margin="8,4" 
                                           IsChecked="{Binding SelectedTrendIndicator, ConverterParameter=平均票价, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                           Command="{Binding SelectTrendIndicatorCommand}" 
                                           CommandParameter="平均票价"
                                           FontSize="{DynamicResource MaterialDesignFontSize}"/>
                                <RadioButton Content="同比增长" 
                                           Style="{StaticResource MaterialDesignRadioButton}"
                                           Margin="8,4" 
                                           IsChecked="{Binding SelectedTrendIndicator, ConverterParameter=同比增长, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                           Command="{Binding SelectTrendIndicatorCommand}" 
                                           CommandParameter="同比增长"
                                           FontSize="{DynamicResource MaterialDesignFontSize}"/>
                                <RadioButton Content="环比增长" 
                                           Style="{StaticResource MaterialDesignRadioButton}"
                                           Margin="8,4" 
                                           IsChecked="{Binding SelectedTrendIndicator, ConverterParameter=环比增长, Converter={StaticResource StringEqualityToBooleanConverter}}"
                                           Command="{Binding SelectTrendIndicatorCommand}" 
                                           CommandParameter="环比增长"
                                           FontSize="{DynamicResource MaterialDesignFontSize}"/>
                            </WrapPanel>
                        </Grid>
                        
                        <!-- 支出趋势图表区域 -->
                        <Grid Grid.Row="3">
                            <!-- 图表 -->
                            <lvc:CartesianChart Series="{Binding ExpenseSeries}" 
                                               LegendLocation="Top"
                                               DisableAnimations="False"
                                               Hoverable="True"
                                               DataTooltip="{x:Null}"
                                               Background="Transparent"
                                               FontSize="{DynamicResource MaterialDesignFontSize}"
                                               Visibility="{Binding ShowExpenseChart, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="{Binding ExpenseXTitle}" 
                                             Labels="{Binding ExpenseLabels}"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             FontSize="{DynamicResource MaterialDesignFontSize}"
                                             Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                                             LabelsRotation="0"
                                             Margin="10"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="{Binding ExpenseYTitle}" 
                                             MinValue="0"
                                             LabelFormatter="{Binding ExpenseYFormatter}"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             FontSize="{DynamicResource MaterialDesignFontSize}"
                                             Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                                             Margin="10"/>
                                </lvc:CartesianChart.AxisY>
                                <lvc:CartesianChart.ChartLegend>
                                    <lvc:DefaultLegend Background="Transparent"
                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                     FontSize="{DynamicResource MaterialDesignFontSize}"
                                                     BulletSize="15"/>
                                </lvc:CartesianChart.ChartLegend>
                            </lvc:CartesianChart>
                            
                            <!-- 提示信息 -->
                            <TextBlock Text="{Binding ExpenseChartMessage}" 
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      Margin="20"
                                      FontSize="{DynamicResource MaterialDesignHeadline6FontSize}"
                                      Visibility="{Binding ShowExpenseChart, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            
                            <!-- 空数据提示 - 仅在ShowExpenseChart为true且HasExpenseData为false时显示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="{DynamicResource MaterialDesignHeadline5FontSize}">
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource MultiBooleanToVisibilityConverter}">
                                        <Binding Path="ShowExpenseChart"/>
                                        <Binding Path="HasExpenseData" Converter="{StaticResource InverseBooleanConverter}"/>
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
            
            <!-- 加载指示器 -->
            <Grid Grid.Row="0" Grid.RowSpan="6" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.Background>
                    <SolidColorBrush Color="#000000" Opacity="0.3"/>
                </Grid.Background>
                <Border Background="{DynamicResource MaterialDesignPaper}" 
                        CornerRadius="8" 
                        Width="200" 
                        Height="120"
                        materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                    Value="0" 
                                    IsIndeterminate="True" 
                                    Margin="0,0,0,16"
                                    Width="40"
                                    Height="40"/>
                        <TextBlock Text="正在刷新数据..." 
                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl> 