<UserControl x:Class="TA_WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TA_WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:TA_WPF.ViewModels"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 数据模板 -->
            <DataTemplate x:Key="RecentActivityTemplate">
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <materialDesign:PackIcon Kind="Train" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding DepartDate, StringFormat='{}{0:yyyy-MM-dd}'}" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TrainNo}" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding DepartStation}" Margin="0,0,4,0"/>
                            <TextBlock Text="→" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding ArriveStation}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SeatType}" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="2" Text="{Binding Money, StringFormat='¥{0:N2}'}" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>
            </DataTemplate>
            
            <!-- 路线数据模板 -->
            <DataTemplate x:Key="RouteTemplate">
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding RouteName}" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding Count, StringFormat='{}{0}次'}" Margin="8,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding TotalExpense, StringFormat='¥{0:N2}'}" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题和时间区域 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 标题 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ViewDashboard" Width="36" Height="36" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="系统仪表盘" 
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                           VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 当前时间 -->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="CalendarMonth" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding FormattedDate}" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="Clock" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding FormattedTime}" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               HorizontalAlignment="Right"
                               FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- 时间筛选区域 -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Filter" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="时间筛选" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="今日" Style="{StaticResource MaterialDesignFlatButton}" Margin="4,0" Command="{Binding TimeRangeCommand}" CommandParameter="今日"/>
                        <Button Content="本周" Style="{StaticResource MaterialDesignFlatButton}" Margin="4,0" Command="{Binding TimeRangeCommand}" CommandParameter="本周"/>
                        <Button Content="本月" Style="{StaticResource MaterialDesignFlatButton}" Margin="4,0" Command="{Binding TimeRangeCommand}" CommandParameter="本月"/>
                        <Button Content="本年" Style="{StaticResource MaterialDesignFlatButton}" Margin="4,0" Command="{Binding TimeRangeCommand}" CommandParameter="本年"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <DatePicker SelectedDate="{Binding StartDate}" Width="120" materialDesign:HintAssist.Hint="开始日期" Language="zh-CN"/>
                        <TextBlock Text="至" VerticalAlignment="Center" Margin="8,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="120" materialDesign:HintAssist.Hint="结束日期" Language="zh-CN"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            
            <!-- 数据概览区域 -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 数据卡片区域 -->
                <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 总车票数卡片 -->
                    <materialDesign:Card Margin="8" Width="220" Height="120" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                                <materialDesign:PackIcon Kind="TicketOutline" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="总车票数" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalTickets}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                       FontWeight="Bold"/>
                                <TextBlock Text="张" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 本月车票卡片 -->
                    <materialDesign:Card Margin="8" Width="220" Height="120" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                                <materialDesign:PackIcon Kind="CalendarMonth" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentRangeText}" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CurrentRangeTickets}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                       FontWeight="Bold"/>
                                <TextBlock Text="张" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 最经常出发的车站卡片 -->
                    <materialDesign:Card Margin="8" Width="220" Height="120" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                                <materialDesign:PackIcon Kind="Train" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="最经常出发的车站" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding MostFrequentDepartureStation}" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- 最后一次出发的车站卡片 -->
                    <materialDesign:Card Margin="8" Width="220" Height="120" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
                                <materialDesign:PackIcon Kind="TrainVariant" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="最后一次出发的车站" 
                                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding LastDepartureStation}" 
                                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </WrapPanel>
            </Grid>
            
            <!-- 图表分析区域 -->
            <Grid Grid.Row="3" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 车票使用趋势 -->
                <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="车票使用趋势" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <lvc:CartesianChart Grid.Row="1" 
                                           Series="{Binding MonthlyTicketSeries}" 
                                           LegendLocation="Right" 
                                           DisableAnimations="False"
                                           Hoverable="True"
                                           DataTooltip="{x:Null}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="月份" 
                                         Labels="{Binding MonthlyTicketLabels}"
                                         Foreground="{StaticResource MaterialDesignBody}"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="车票数量" 
                                         MinValue="0"
                                         LabelFormatter="{Binding MonthlyTicketYFormatter}"
                                         Foreground="{StaticResource MaterialDesignBody}"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 车票类型分布 -->
                <materialDesign:Card Grid.Row="0" Grid.Column="1" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="ChartPie" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="车票类型分布" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1">
                            <lvc:PieChart Series="{Binding TicketTypeSeries}" 
                                         LegendLocation="Bottom" 
                                         InnerRadius="0" 
                                         Hoverable="True" 
                                         DataClick="PieChart_DataClick"
                                         DisableAnimations="False">
                                <lvc:PieChart.DataTooltip>
                                    <lvc:DefaultTooltip SelectionMode="OnlySender"/>
                                </lvc:PieChart.DataTooltip>
                            </lvc:PieChart>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Visibility="{Binding HasTicketTypeData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 费用支出分析 -->
                <materialDesign:Card Grid.Row="1" Grid.Column="0" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="CurrencyCny" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="费用支出分析" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 预算调整区域 -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="月度预算: " 
                                      VerticalAlignment="Center" 
                                      Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            
                            <Slider Grid.Column="1"
                                    Minimum="0"
                                    Maximum="10000"
                                    Value="{Binding BudgetAmount}"
                                    Style="{StaticResource MaterialDesignSlider}"
                                    TickFrequency="500"
                                    Margin="16,0"/>
                            
                            <TextBox Grid.Column="2"
                                     Text="{Binding BudgetAmount, StringFormat='{}{0:N0}'}"
                                     Width="120"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:TextFieldAssist.PrefixText="¥"
                                     materialDesign:HintAssist.Hint="预算金额"
                                     materialDesign:HintAssist.HelperText="输入0-10000之间的数值"
                                     PreviewTextInput="NumberValidationTextBox"/>
                        </Grid>
                        
                        <Grid Grid.Row="2">
                            <lvc:CartesianChart Series="{Binding ExpenseSeries}" 
                                               LegendLocation="Right"
                                               DisableAnimations="False"
                                               Hoverable="True"
                                               DataTooltip="{x:Null}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="月份" 
                                             Labels="{Binding ExpenseLabels}"
                                             Foreground="{StaticResource MaterialDesignBody}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="金额" 
                                             MinValue="0"
                                             LabelFormatter="{Binding ExpenseYFormatter}"
                                             Foreground="{StaticResource MaterialDesignBody}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Visibility="{Binding HasExpenseData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
                
                <!-- 常用线路TOP5 -->
                <materialDesign:Card Grid.Row="1" Grid.Column="1" Margin="8" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Routes" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="常用线路TOP5" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid Grid.Row="1">
                            <ListView ItemsSource="{Binding TopRouteData}" 
                                     ItemTemplate="{StaticResource RouteTemplate}" 
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     PreviewMouseWheel="ListView_PreviewMouseWheel"/>
                            
                            <!-- 空数据提示 -->
                            <TextBlock Text="暂无数据" 
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Visibility="{Binding HasTopRouteData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
            
            <!-- 最近活动区域 -->
            <materialDesign:Card Grid.Row="4" Margin="0,0,0,16" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="History" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="最近活动" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding RecentActivities}" 
                              ItemTemplate="{StaticResource RecentActivityTemplate}" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="300"/>
                </Grid>
            </materialDesign:Card>
            
            <!-- 加载指示器 -->
            <Grid Grid.Row="0" Grid.RowSpan="5" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            
            <!-- 刷新按钮 -->
            <Button Grid.Row="4" 
                    Style="{StaticResource MaterialDesignFloatingActionButton}" 
                    ToolTip="刷新数据" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,16,16"
                    Command="{Binding RefreshCommand}">
                <materialDesign:PackIcon Kind="Refresh" Height="24" Width="24" />
            </Button>
        </Grid>
    </ScrollViewer>
</UserControl> 