<Window x:Class="TA_WPF.Views.AddCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TA_WPF.Views"
        xmlns:viewmodels="clr-namespace:TA_WPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="新建收藏夹" 
        Height="500" 
        Width="500"
        MinHeight="450" 
        MinWidth="450"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="{DynamicResource MaterialDesignFontSize}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Microsoft YaHei"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="新建收藏夹" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- 表单内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 收藏夹名称 -->
                <TextBox materialDesign:HintAssist.Hint="收藏夹名称"
                         Text="{Binding CollectionName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,20"/>

                <!-- 收藏夹描述 -->
                <TextBox materialDesign:HintAssist.Hint="收藏夹描述"
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,20"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="80"/>

                <!-- 封面图片 -->
                <TextBlock Text="封面图片" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,10"/>
                
                <Border BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,10">
                    <Grid Height="120">
                        <!-- 默认提示 -->
                        <TextBlock Text="暂无封面图片" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Visibility="{Binding HasCoverImage, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Negate}"/>
                        
                        <!-- 图片预览 -->
                        <Image Stretch="Uniform" 
                               Margin="5"
                               Visibility="{Binding HasCoverImage, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Image.Source>
                                <Binding Path="CoverImage">
                                    <Binding.TargetNullValue>
                                        <DrawingImage/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                    </Grid>
                </Border>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding BrowseImageCommand}"
                            Margin="0,0,10,0"
                            Foreground="{DynamicResource GlobalAccentBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Upload" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="上传" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Grid.Column="1" 
                              Text="{Binding CoverImageFileName}" 
                              VerticalAlignment="Center"
                              TextTrimming="CharacterEllipsis"/>
                </Grid>

                <!-- 评分 -->
                <TextBlock Text="评分" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,10"/>
                <materialDesign:RatingBar Value="{Binding Importance}" Max="5" Margin="0,0,0,20"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Command="{Binding CreateCommand}" 
                    IsEnabled="{Binding IsValid}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,10,0"
                    Width="100"
                    Foreground="{DynamicResource GlobalAccentBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="新建" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Button Command="{Binding CancelCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Width="100"
                    Foreground="{DynamicResource GlobalAccentBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="关闭" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- 加载指示器 -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#88000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" 
                         Style="{StaticResource MaterialDesignCircularProgressBar}" 
                         Value="0" 
                         Width="50" 
                         Height="50"/>
        </Grid>
    </Grid>
</Window> 