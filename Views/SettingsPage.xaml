<UserControl x:Class="TA_WPF.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TA_WPF.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="1350" d:DesignWidth="1000"
             x:Name="root">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Text="系统设置" 
                   Grid.Row="0"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource AutoHideScrollViewerStyle}">
            <StackPanel>
                <!-- 外观设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="外观设置" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- 主题设置 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="深色模式" 
                                           FontSize="16" 
                                           FontWeight="Medium"/>
                                <TextBlock Text="切换应用的深色/浅色主题" 
                                           Opacity="0.6" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <ToggleButton Grid.Column="1" 
                                          IsChecked="{Binding IsDarkMode}"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- 字体大小设置 -->
                        <Grid Margin="0,16,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="字体大小" 
                                           FontSize="16" 
                                           FontWeight="Medium"/>
                                <TextBlock Text="调整应用的字体大小" 
                                           Opacity="0.6" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Slider x:Name="FontSizeSlider" 
                                       Width="150"
                                       Minimum="12" 
                                       Maximum="20" 
                                       Value="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       TickFrequency="1"
                                       IsSnapToTickEnabled="True"
                                       ValueChanged="FontSizeSlider_ValueChanged"
                                       VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource MaterialDesignPaper}" 
                                        BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Margin="8,0,0,0"
                                        MinWidth="50">
                                    <TextBlock x:Name="FontSizeText"
                                              Text="{Binding FontSize, StringFormat={}{0:N0}pt, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Center"
                                              Foreground="{DynamicResource MaterialDesignBody}"
                                              FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 数据库设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="数据库设置" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- 连接信息 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="数据库连接" 
                                           FontSize="16" 
                                           FontWeight="Medium"/>
                                <TextBlock Text="当前连接的数据库信息" 
                                           Opacity="0.6" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- 数据库连接详情 -->
                        <Grid Margin="0,8,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="服务器地址:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding ServerAddress}"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="用户名:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Username}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="密码:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayPassword}" Margin="0,0,8,0"/>
                                <ToggleButton x:Name="ShowPasswordToggle" 
                                              IsChecked="{Binding ShowPassword}" 
                                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                              ToolTip="显示/隐藏密码"
                                              VerticalAlignment="Center"
                                              Margin="0,-4,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="修改数据库:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding NewDatabaseName}" 
                                         Width="300"
                                         materialDesign:HintAssist.Hint="输入新的数据库名称"/>
                                <Button Content="确定" 
                                        Command="{Binding UpdateDatabaseCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4"
                                        Foreground="{DynamicResource GlobalAccentBrush}"
                                        Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 高德地图API设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="高德地图API设置" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <!-- 注册链接 -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,16"
                                Command="{Binding NavigateToUriCommand}"
                                CommandParameter="https://console.amap.com/dev/id/phone"
                                Padding="0"
                                Foreground="{DynamicResource GlobalAccentBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Link" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="没有API？点我去注册" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- API设置 -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Web服务【获取车站信息功能】:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,16"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding AmapWebServiceKey}"
                                     Margin="0,0,0,8"
                                     MaxLength="32"
                                     ToolTip="为了确保准确无误，建议您粘贴并非输入内容。仅支持数字和字母，最多32个字符。"
                                     PreviewTextInput="ApiKey_PreviewTextInput">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="materialDesign:HintAssist.Hint" Value="输入Web服务API Key"/>
                                        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource GlobalAccentBrush}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="0,4,0,4"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Web端【车站地图功能】:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,16"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding AmapWebKey}"
                                     Margin="0,0,0,8"
                                     MaxLength="32"
                                     ToolTip="为了确保准确无误，建议您粘贴并非输入内容。仅支持数字和字母，最多32个字符。"
                                     PreviewTextInput="ApiKey_PreviewTextInput">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="materialDesign:HintAssist.Hint" Value="输入Web端API Key"/>
                                        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource GlobalAccentBrush}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="0,4,0,4"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="安全密钥（Web端所生成的）:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding AmapSecurityKey}"
                                     Margin="0,0,0,0"
                                     MaxLength="32"
                                     ToolTip="为了确保准确无误，建议您粘贴并非输入内容。仅支持数字和字母，最多32个字符。"
                                     PreviewTextInput="ApiKey_PreviewTextInput">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="materialDesign:HintAssist.Hint" Value="输入安全密钥"/>
                                        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{DynamicResource GlobalAccentBrush}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="0,4,0,4"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                        
                        <!-- 保存按钮 -->
                        <Button Content="确定" 
                                Command="{Binding SaveAmapApiSettingsCommand}"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Background" Value="{DynamicResource GlobalAccentBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="16,4"/>
                                    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource GlobalAccentLightBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 日志管理 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="日志管理" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="日志导出" 
                                           FontSize="16" 
                                           FontWeight="Medium"/>
                                <TextBlock Text="导出和管理系统日志" 
                                           Opacity="0.6" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- 一键导出所有日志按钮 -->
                            <Button Grid.Column="1" 
                                    Content="一键导出所有日志"
                                    Command="{Binding ExportAllLogsCommand}"
                                    ToolTip="导出所有日志和系统信息，用于问题反馈"
                                    Margin="0,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="{DynamicResource GlobalAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="16,4"/>
                                        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource GlobalAccentLightBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <!-- 日志导出选项 -->
                        <Grid Margin="0,8,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                       Text="遇到问题？使用'一键导出所有日志'功能，将所有必要的信息打包发送给开发人员，帮助我们更快地解决您的问题。"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,16"
                                       Foreground="{DynamicResource GlobalAccentBrush}"
                                       FontWeight="Medium"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="应用程序日志:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="导出应用程序操作日志（用于问题排查）"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                                <Button Content="导出"
                                        Command="{Binding ExportLogCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4"
                                        Foreground="{DynamicResource GlobalAccentBrush}"
                                        Margin="8,0,0,0"/>
                                <Button Content="打开目录"
                                        Command="{Binding OpenAppLogDirCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4"
                                        Foreground="{DynamicResource GlobalAccentBrush}"
                                        Margin="8,0,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="系统日志:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,8,16,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="导出系统级别日志（自动保存在系统目录）"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
                                <Button Content="导出"
                                        Command="{Binding ExportSystemLogCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4"
                                        Foreground="{DynamicResource GlobalAccentBrush}"
                                        Margin="8,8,0,0"/>
                                <Button Content="打开目录"
                                        Command="{Binding OpenSystemLogDirCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4"
                                        Foreground="{DynamicResource GlobalAccentBrush}"
                                        Margin="8,8,0,0"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="系统日志位置:" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,8,16,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding SystemLogLocation}"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                                       Text="注意：系统日志会自动保存并轮换，超过50MB时会自动归档，保留最近30天的记录"
                                       FontStyle="Italic"
                                       Opacity="0.7"
                                       Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 系统信息 -->
                <materialDesign:Card Padding="16">
                    <StackPanel>
                        <TextBlock Text="系统信息" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="应用版本:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="1.0.0"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="数据库版本:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="MySQL 8.0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="最后更新:" 
                                       FontWeight="Medium"
                                       Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="2024-03-10"/>
                        </Grid>
                        
                        <Button Content="检测更新" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Foreground="{DynamicResource GlobalAccentBrush}"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 